<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Phone</th>
      <th>Details</th>
      <th>Openning time</th>
      <th>Closing time</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.user_id %></td>
        <td><%= restaurant.category_id %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address_1 %></td>
        <td><%= restaurant.address_2 %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.details %></td>
        <td><%= restaurant.openning_time %></td>
        <td><%= restaurant.closing_time %></td>
        <td><%= restaurant.website %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

